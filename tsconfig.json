{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./src/*"],
      "db": ["./database.types.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "globals.d.ts"]
}
